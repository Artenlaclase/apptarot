---
// src/pages/index.astro
// Redirigir automáticamente a /cards
export async function get() {
  return {
    redirect: '/cards',
    status: 302
  };
}

import Layout from '../layouts/Layout.astro';
// Opcional: contenido de respaldo por si la redirección falla
// (No se ejecutará si la redirección funciona)
import '../styles/global.css';
---
<Layout title="Redirigiendo..." description="Redirigiendo al mazo de tarot">
  <meta http-equiv="refresh" content="0; url=/cards" />
  <link rel="canonical" href="/cards" />
<main>
  <h1>Redirigiendo al mazo de tarot...</h1>
  <p>Si no eres redirigido, <a href="/cards">haz clic aquí</a></p>
</main>