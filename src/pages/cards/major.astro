// src/pages/cards/major.astro
import { db } from '../../lib/firebase';
import { collection, getDocs, query, orderBy, where } from 'firebase/firestore';
import Layout from '../../layouts/Layout.astro';
import '../../styles/cards.css';

interface FirestoreCard {
  id: string;
  nombre?: string;
  numero?: string | number;
  imagem?: string | null;
  imagen?: string | null;
  arcano?: string;
}

// Query para obtener solo los arcanos mayores
const q = query(
  collection(db, 'cards'), 
  where('arcano', '==', 'mayor'),
  orderBy('numero')
);

const querySnapshot = await getDocs(q);

const processImageUrl = (url: string | undefined | null): string => {
  if (!url || typeof url !== 'string') return '/placeholder-card.jpg';
  const cleanedUrl = url.trim();
  
  if (cleanedUrl.startsWith('https://firebasestorage.googleapis.com')) {
    return cleanedUrl.includes('alt=media')
      ? cleanedUrl
      : `${cleanedUrl}${cleanedUrl.includes('?') ? '&' : '?'}alt=media`;
  }
  
  if (cleanedUrl.includes('res.cloudinary.com') && !cleanedUrl.includes('upload/w_')) {
    return cleanedUrl.replace('upload/', 'upload/w_300,f_auto,q_auto/');
  }
  
  return cleanedUrl;
};

const cards = querySnapshot.docs
  .map(doc => {
    const data = doc.data();
    const imageUrl = data.imagem || data.imagen;
    
    return {
      id: doc.id,
      nombre: data.nombre || 'Sin nombre',
      numero: data.numero ?? 'N/A',
      arcano: data.arcano || '',
      imagem: processImageUrl(imageUrl)
    };
  })
  .filter(card => card.arcano === 'mayor'); // Filtro adicional para asegurar solo arcanos mayores

const pageTitle = "Arcanos Mayores del Tarot de Marsella";
const pageDescription = "Explora los 22 Arcanos Mayores del Tarot de Marsella y descubre su profundo simbolismo espiritual";
